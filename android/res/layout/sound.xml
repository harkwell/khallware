<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		xmlns:android="http://schemas.android.com/apk/res/android" >

	<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/lit_play"
			android:onClick="goPlay" />

	<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/sound_name"
			android:focusable="false" />

	<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/sound_desc"
			android:focusable="false" />

	<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/sound_id"
			android:focusable="false" />

	<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/sound_title"
			android:focusable="false" />

	<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/sound_artist"
			android:focusable="false" />

	<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/sound_genre"
			android:focusable="false" />

	<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/sound_recording"
			android:focusable="false" />

	<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/sound_publisher"
			android:focusable="false" />

	<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/sound_updated"
			android:focusable="false" />

	<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/sound_mask"
			android:focusable="false" />

	<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/sound_path"
			android:focusable="false" />

</LinearLayout>

