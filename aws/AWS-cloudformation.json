{
   "Description" : "khallware - Mobile Computing Services",
   "Mappings" : {
      "Vars" : {
         "ec2size" : { "Val" : "t2.micro" },
         "rdssize" : { "Val" : "db.t2.micro" }
      }
   },
   "Resources"   : {
      "vpc" : {
         "Type"       : "AWS::EC2::VPC",
         "Properties" : {
            "CidrBlock"          : "10.0.0.0/16",
            "EnableDnsSupport"   : "true",
            "EnableDnsHostnames" : "true",
            "InstanceTenancy"    : "default",
            "Tags" : [ { "Key" : "projects", "Value" : "khallware" } ]
         }
      },
      "role" : {
         "Type"       : "AWS::IAM::Role",
         "Properties" : {
            "AssumeRolePolicyDocument" : {
               "Version" : "2012-10-17",
               "Statement": [{
                  "Effect"    : "Allow",
                  "Principal" : { "Service": [ "ec2.amazonaws.com" ] },
                  "Action"    : [ "sts:AssumeRole" ]
               }]
            },
            "Path"    : "/"
         }
      },
      "policy" : {
         "Type"       : "AWS::IAM::Policy",
         "Properties" : {
            "PolicyName"     : "policy",
            "Roles"          : [ { "Ref" : "role" } ],
            "PolicyDocument" : {
               "Version" : "2012-10-17",
               "Statement": [
                  { "Effect": "Allow", "Action": "*", "Resource": "*" }
               ]
            }
         }
      },
      "instanceprofile" : {
         "Type"       : "AWS::IAM::InstanceProfile",
         "Properties" : {
            "Path"    : "/",
            "Roles"   : [ { "Ref" : "role" } ]
         }
      },
      "dot23subnet" : {
         "Type" : "AWS::EC2::Subnet",
         "Properties" : {
            "VpcId" : { "Ref" : "vpc" },
            "CidrBlock" : "10.0.23.0/24",
            "AvailabilityZone" : {
               "Fn::Join" : [ "", [{ "Ref" : "AWS::Region" }, "a" ]]
            },
            "Tags" : [ { "Key" : "projects", "Value" : "khallware" } ]
         }
      },
      "dot24subnet" : {
         "Type" : "AWS::EC2::Subnet",
         "Properties" : {
            "VpcId" : { "Ref" : "vpc" },
            "CidrBlock" : "10.0.24.0/24",
            "AvailabilityZone" : {
               "Fn::Join" : [ "", [{ "Ref" : "AWS::Region" }, "a" ]]
            },
            "Tags" : [ { "Key" : "projects", "Value" : "khallware" } ]
         }
      },
      "dot25subnet" : {
         "Type" : "AWS::EC2::Subnet",
         "Properties" : {
            "VpcId" : { "Ref" : "vpc" },
            "CidrBlock" : "10.0.25.0/24",
            "AvailabilityZone" : {
               "Fn::Join" : [ "", [{ "Ref" : "AWS::Region" }, "b" ]]
            },
            "Tags" : [ { "Key" : "projects", "Value" : "khallware" } ]
         }
      },
      "assocSubnetNetworkACL" : {
         "Type" : "AWS::EC2::SubnetNetworkAclAssociation",
         "Properties" : {
            "NetworkAclId" : { "Ref" : "netacl" },
            "SubnetId"     : { "Ref" : "dot23subnet" }
         }
      },
      "internetGw" : {
         "Type" : "AWS::EC2::InternetGateway"
      },
      "vpcGatewayAttachment" : {
         "Type"       : "AWS::EC2::VPCGatewayAttachment",
         "Properties" : {
            "VpcId"             : { "Ref" : "vpc" },
            "InternetGatewayId" : { "Ref" : "internetGw" }
         }
      },
      "routetable" : {
         "Type"       : "AWS::EC2::RouteTable",
         "Properties" : {
            "VpcId" : { "Ref" : "vpc" }
         }
      },
      "inetroute" : {
         "Type"       : "AWS::EC2::Route",
         "DependsOn"  : "vpcGatewayAttachment",
         "Properties" : {
            "RouteTableId" : { "Ref" : "routetable" },
            "DestinationCidrBlock" : "0.0.0.0/0",
            "GatewayId" : { "Ref" : "internetGw" }
         }
      },
      "dot23subnetRoutetableAssoc" : {
         "Type"       : "AWS::EC2::SubnetRouteTableAssociation",
         "Properties" : {
            "SubnetId"     : { "Ref" : "dot23subnet" },
            "RouteTableId" : { "Ref" : "routetable" }
         }
      },
      "dot24subnetRoutetableAssoc" : {
         "Type"       : "AWS::EC2::SubnetRouteTableAssociation",
         "Properties" : {
            "SubnetId"     : { "Ref" : "dot24subnet" },
            "RouteTableId" : { "Ref" : "routetable" }
         }
      },
      "netacl" : {
         "Type"       : "AWS::EC2::NetworkAcl",
         "Properties" : {
            "VpcId" : { "Ref" : "vpc" },
            "Tags" : [ { "Key" : "projects", "Value" : "khallware" } ]
         }
      },
      "netAclEntry1" : {
         "Type"       : "AWS::EC2::NetworkAclEntry",
         "Properties" : {
            "RuleNumber" : "100",
            "RuleAction" : "allow",
            "Protocol"   : "-1",
            "Egress"     : "true",
            "CidrBlock"  : "0.0.0.0/0",
            "NetworkAclId" : { "Ref" : "netacl" }
         }
      },
      "netAclEntry2" : {
         "Type"       : "AWS::EC2::NetworkAclEntry",
         "Properties" : {
            "RuleNumber" : "200",
            "RuleAction" : "allow",
            "Protocol"   : "-1",
            "CidrBlock"  : "0.0.0.0/0",
            "NetworkAclId" : { "Ref" : "netacl" }
         }
      },
      "securitygroup" : {
         "Type" : "AWS::EC2::SecurityGroup",
         "Properties" : {
            "VpcId"                : { "Ref" : "vpc" },
            "GroupDescription"     : "Enable SSH, HTTP, and HTTPS",
            "Tags" : [ { "Key" : "projects", "Value" : "khallware" } ],
            "SecurityGroupIngress" : [
               {
                  "IpProtocol" : "tcp",
                  "FromPort"   : "22",
                  "ToPort"     : "22",
                  "CidrIp"     : "0.0.0.0/0"
               },
               {
                  "IpProtocol" : "tcp",
                  "FromPort"   : "80",
                  "ToPort"     : "80",
                  "CidrIp"     : "0.0.0.0/0"
               },
               {
                  "IpProtocol" : "tcp",
                  "FromPort"   : "443",
                  "ToPort"     : "443",
                  "CidrIp"     : "0.0.0.0/0"
               },
               {
                  "IpProtocol" : "tcp",
                  "FromPort"   : "3306",
                  "ToPort"     : "3306",
                  "CidrIp"     : "10.0.0.0/16"
               },
               {
                  "IpProtocol" : "tcp",
                  "FromPort"   : "8080",
                  "ToPort"     : "8080",
                  "CidrIp"     : "10.0.0.0/16"
               },
               {
                  "IpProtocol" : "tcp",
                  "FromPort"   : "8081",
                  "ToPort"     : "8081",
                  "CidrIp"     : "10.0.0.0/16"
               },
               {
                  "IpProtocol" : "tcp",
                  "FromPort"   : "9418",
                  "ToPort"     : "9418",
                  "CidrIp"     : "10.0.0.0/16"
               }
            ]
         }
      },
      "appserver" : {
         "Type"       : "AWS::EC2::Instance",
         "DependsOn"  : "dot24subnetRoutetableAssoc",
         "Properties" : {
            "KeyName"            : "khallware",
            "InstanceType"       : "t2.micro",
            "IamInstanceProfile" : { "Ref" : "instanceprofile" },
            "AvailabilityZone"   : {
               "Fn::Join" : [ "", [{ "Ref" : "AWS::Region" }, "a" ]]
            },
            "ImageId"            : "ami-7172b611",
            "Monitoring"         : "false",
            "Tags" : [ { "Key" : "projects", "Value" : "khallware" } ],
            "NetworkInterfaces"  : [{
               "DeviceIndex"              : 0,
               "SubnetId"                 : { "Ref" : "dot24subnet" },
               "PrivateIpAddresses"       : [{
                   "PrivateIpAddress": "10.0.24.100", "Primary": "true"
               }],
               "GroupSet"                 : [{ "Ref" : "securitygroup" }],
               "AssociatePublicIpAddress" : "true",
               "DeleteOnTermination"      : "true"
            }],
            "UserData" : { "Fn::Base64" : { "Fn::Join" : ["", [
               "#!/bin/bash\n",
               "yum install -y wget git\n",
               "cd /tmp && wget --quiet -c 'http://mirrors.ocf.berkeley.edu/apache/tomcat/tomcat-8/v8.5.4/bin/apache-tomcat-8.5.4.tar.gz'\n",
               "mkdir -p /var/lib/tomcat8\n",
               "tar zxvf apache-tomcat-8.5.4.tar.gz -C /var/lib/tomcat8 --strip-components=1\n",
               "yum install -y java-1.8.0-openjdk-devel\n",
               "update-alternatives --set java /usr/lib/jvm/jre-1.8.0-openjdk.x86_64/bin/java\n",
               "export JAVA_HOME=/usr/lib/jvm/jre-1.8.0-openjdk.x86_64/\n",
               "/var/lib/tomcat8/bin/startup.sh\n",
               "mkdir -p /opt/khallware/gitrepo\n",
               "cd /opt/khallware/gitrepo\n",
               "git clone https://github.com/harkwell/khallware.git\n",
               "bash /opt/khallware/gitrepo/khallware/aws/setup-appserver.sh"
            ]]}}
         }
      },
      "webserver" : {
         "Type"       : "AWS::EC2::Instance",
         "DependsOn"  : "dot23subnetRoutetableAssoc",
         "Properties" : {
            "KeyName"            : "khallware",
            "InstanceType"       : "t2.micro",
            "IamInstanceProfile" : { "Ref" : "instanceprofile" },
            "AvailabilityZone"   : {
               "Fn::Join" : [ "", [{ "Ref" : "AWS::Region" }, "a" ]]
            },
            "ImageId"            : "ami-7172b611",
            "Monitoring"         : "false",
            "Tags" : [ { "Key" : "projects", "Value" : "khallware" } ],
            "NetworkInterfaces"  : [{
               "DeviceIndex"              : 0,
               "SubnetId"                 : { "Ref" : "dot23subnet" },
               "PrivateIpAddresses"       : [{
                   "PrivateIpAddress": "10.0.23.100", "Primary": "true"
               }],
               "GroupSet"                 : [{ "Ref" : "securitygroup" }],
               "AssociatePublicIpAddress" : "true",
               "DeleteOnTermination"      : "true"
            }],
            "UserData" : { "Fn::Base64" : { "Fn::Join" : ["", [
               "#!/bin/bash\n",
               "yum install -y nginx git git-daemon mysql\n",
               "/usr/sbin/nginx\n",
               "mkdir -p /opt/khallware/gitrepo\n",
               "cd /opt/khallware/gitrepo\n",
               "git clone https://github.com/harkwell/khallware.git\n",
               "touch /opt/khallware/gitrepo/khallware/.git/git-daemon-export-ok\n",
               "nohup git daemon --reuseaddr --verbose --base-path=/opt/khallware/gitrepo --enable=receive-pack -- /opt/khallware/gitrepo/khallware &\n",
               "bash /opt/khallware/gitrepo/khallware/aws/setup-webserver.sh\n"
            ]]}}
         }
      },
      "dbsubnetgroup" : {
         "Type" : "AWS::RDS::DBSubnetGroup",
         "Properties" : {
            "DBSubnetGroupDescription" : "khallware db subnet group",
            "SubnetIds" : [
               { "Ref" : "dot23subnet" },
               { "Ref" : "dot24subnet" },
               { "Ref" : "dot25subnet" }
            ]
         }
      },
      "database" : {
         "Type"       : "AWS::RDS::DBInstance",
         "DependsOn"  : "securitygroup",
         "Properties" : {
            "Engine"             : "MariaDB",
            "DBName"             : "website",
            "DBSubnetGroupName"  : { "Ref" : "dbsubnetgroup" },
            "DBInstanceClass"    :
               { "Fn::FindInMap" : [ "Vars", "rdssize", "Val"]},
            "VPCSecurityGroups"  : [{ "Ref" : "securitygroup" }],
            "PubliclyAccessible" : "false",
            "MultiAZ"            : "false",
            "StorageType"        : "gp2",
            "AvailabilityZone"   :
               { "Fn::Join" : [ "", [{ "Ref" : "AWS::Region" }, "a" ]] },
            "MasterUsername"     : "api",
            "MasterUserPassword" : "khallware",
            "AllocatedStorage"   : "5",
            "StorageEncrypted"   : "false",
            "Tags" : [ { "Key" : "projects", "Value" : "khallware" } ]
         }
      }
   },
   "Outputs" : {
      "khallware" : {
         "Description" : "Connecting to khallware...",
         "Value" : { "Fn::Join" : [ "", [{ "Ref" : "AWS::Region" }, "a" ]] }
      }
   }
}
